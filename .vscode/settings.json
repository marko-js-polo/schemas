{
  "cSpell.words": ["markoc", "taglib", "textto"],
  "eslint.validate": [
    "javascript",
    "json",
    "jsonc",
    "json5",
    "yaml",
    "toml",
    "typescript"
  ],
  "json.schemas": [
    {
      "fileMatch": [
        "marko-tag.pub*.json",
        "marko-tag.pub*.jsonc"
      ],
      "url": "https://raw.githubusercontent.com/marko-js-polo/schemas/main/marko-tag.schema.json"
    },
    {
      "fileMatch": [
        "marko-tag.json",
        "marko-tag.jsonc",
        "marko-tag.*.json",
        "marko-tag.*.jsonc"
      ],
      "url": "./marko-tag.schema.json"
    },
    {
      "fileMatch": [
        "marko.json",
        "marko.jsonc",
        "marko.*.json",
        "marko.*.jsonc"
      ],
      "url": "./marko.schema.json"
    }
  ]
}
