        }
      ]
    },
    "dash-cased": {
      "title": "Property style: dash-cased",
      "allOf": [
        {
          "$ref": "./tag.base.json#/$defs/camelCased"
        },
        {
          "$ref": "./tag.base.json#/$defs/topLevel-tag-properties"
        }
      ]
    }
